<TeamConfigScreen>:
  name: "team_config"
  title: "У запеклій грі зійдуться:"
  button_text: "До налаштувань"
  
  MDFloatLayout:
    size_hint: .9, 1
    pos_hint: {"center_x": .5}

    MDList:
      size_hint: 1, 0.75
      pos_hint: {"top": .9, "center_x": .5}
        
      MDList:
        id: team_list
        spacing: "5dp"
      
      MDFloatLayout:
        id: add_button_container
        size_hint: 1, None
        height: root.team_height
        orientation: "vertical"
        canvas.before:
          Color:
            rgba: 1, 1, 1, .2
          BorderImage:
            source: "./assets/imgs/team_label.png"
            border: 0, 0, 0, 0
            pos: self.pos
            size: self.size
        
        MDIconButton:
          icon: "plus-thick"
          pos_hint: {"center_x": .5, "center_y": .5}
          size_hint: None, None
          on_press: root.add_team()
          ripple_alpha: 0
          theme_text_color: "Custom"
          text_color: PINK_COLOR
