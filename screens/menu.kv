<MenuScreen>:
  name: "menu"

  FitImage:
    source: "assets/imgs/main.png"

  MDBoxLayout:
    adaptive_height: True
    size_hint: .5, None
    orientation: "vertical"
    spacing: "20dp"
    pos_hint: { "center_x": .5, "y": .1 }

    OutlineButton:
      id: continue_button
      text: "ПРОДОВЖИТИ"
      size_hint: 1, None
      opacity: 1 if app.active_game else 0
      disabled: False if app.active_game else True
      on_press: 
        app.load_main_game()

    OutlineButton:
      text: "ГРАТИ"
      size_hint: 1, None
      on_press: 
        app.to_game_config()

    OutlineButton:
      text: "ПРО ГРУ"
      size_hint: 1, None
